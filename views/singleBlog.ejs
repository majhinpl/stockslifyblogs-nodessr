<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") %>

        <title>View blog</title>
</head>

<body>
    <%- include("./partials/nav") %>
        <div class="container mt-4">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImageUrl %>" alt="" class="rounded img-view-blog">
            <pre>
                <%= blog.body %>
            </pre>
        </div>
        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImageUrl %>" width="50px" height="50px" alt="" class="rounded-full">
            <%= blog.createdBy.fullName %>
                <button>
                    <img src="/images/edit.png" alt="" width="24" height="24">
                </button>
                <button>
                    <img src="/images/delete.png" alt="" width="24" height="24">
                </button>
        </div>

        <div class="container mt-4">
            <h1>Comments (<%= comments.length %>)</h1>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" id="content" class="form-control" name="content"
                            placeholder="Enter your comments" />
                    </div>

                    <button type="submit" data-mdb-button-init data-mdb-ripple-init
                        class="btn btn-primary btn-block mb-4">
                        Submit
                    </button>
                </form>
                <% } %>


                    <div class="mt-4">
                        <% comments.forEach(comment=> { %>
                            <div class="container mt-3">
                                <img src="<%= comment.createdBy.profileImageUrl %>" width="24px" height="24px" alt=""
                                    class="rounded-full" />
                                <%= comment.createdBy.fullName %>
                                    <pre><%= comment.content %></pre>
                            </div>
                            <% }) %>
                    </div>


        </div>



        <%- include("./partials/scripts") %>
</body>

</html>