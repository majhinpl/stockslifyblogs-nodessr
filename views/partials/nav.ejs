<div class="navbar">
  <div class="brand">Brand</div>
  <div class="search-bar">
    <input type="text" placeholder="Search...">
  </div>
  <div class="nav-links" id="navLinks">
    <select id="languageSelect">
      <option value="nepali">नेपाली</option>
      <option value="english">English</option>
    </select>
    <a href="#" id="homeLink">Home</a>
    <a href="#" id="writeLink">Write</a>
    <a href="/user/register" id="registerLink">Register</a>
    <a href="/user/login" id="signInLink">Sign In</a>
    <a href="/user/logout" id="signOutLink">Sign Out</a>
  </div>
  <div class="hamburger" onclick="toggleMobileMenu()">
    <div></div>
    <div></div>
    <div></div>
  </div>
</div>
<div class="mobile-menu" id="mobileMenu">
  <a href="#" id="homeLinkMobile">Home</a>
  <a href="/blog/create" id="writeLinkMobile">Write</a>
  <a href="/user/register" id="registerLinkMobile">Register</a>
  <a href="/user/login" id="signInLinkMobile">Sign In</a>
  <a href="/user/logout" id="signOutLinkMobile">Sign Out</a>
  <select id="languageSelectMobile">
    <option value="nepali">नेपाली</option>
    <option value="english">English</option>
  </select>
</div>


<script>
  function toggleMobileMenu() {
    const mobileMenu = document.getElementById('mobileMenu');
    mobileMenu.style.display = mobileMenu.style.display === 'flex' ? 'none' : 'flex';
  }

  function updateNavLinks(isLoggedIn) {
    const writeLink = document.getElementById('writeLink');
    const signOutLink = document.getElementById('signOutLink');
    const registerLink = document.getElementById('registerLink');
    const signInLink = document.getElementById('signInLink');
    const homeLink = document.getElementById('homeLink');

    const writeLinkMobile = document.getElementById('writeLinkMobile');
    const signOutLinkMobile = document.getElementById('signOutLinkMobile');
    const registerLinkMobile = document.getElementById('registerLinkMobile');
    const signInLinkMobile = document.getElementById('signInLinkMobile');
    const homeLinkMobile = document.getElementById('homeLinkMobile');

    if (isLoggedIn) {
      writeLink.style.display = 'block';
      signOutLink.style.display = 'block';
      registerLink.style.display = 'none';
      signInLink.style.display = 'none';

      writeLinkMobile.style.display = 'block';
      signOutLinkMobile.style.display = 'block';
      registerLinkMobile.style.display = 'none';
      signInLinkMobile.style.display = 'none';
    } else {
      writeLink.style.display = 'none';
      signOutLink.style.display = 'none';
      registerLink.style.display = 'block';
      signInLink.style.display = 'block';

      writeLinkMobile.style.display = 'none';
      signOutLinkMobile.style.display = 'none';
      registerLinkMobile.style.display = 'block';
      signInLinkMobile.style.display = 'block';
    }
  }

  // Example of setting the navigation links based on the user login status
  const userLoggedIn = false; // Change this to true if the user is logged in
  updateNavLinks(userLoggedIn);
</script>

<% if (locals.error) { %>
  <div class="container mt-4">
    <div class="alert alert-danger" role="alert">
      <%= locals.error %>
    </div>
  </div>
  <% } %>